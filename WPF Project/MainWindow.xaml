<Window x:Class="WPFProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usr="clr-namespace:WPFProject.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        MinHeight="265"
        MinWidth="510"
        WindowStyle="None">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome GlassFrameThickness="2"
                                  ResizeBorderThickness="5"
                                  UseAeroCaptionButtons="False" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Grid>
                            <Grid.Background>
                                <SolidColorBrush Color="{StaticResource Window.Black}" />
                            </Grid.Background>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="1"
                                    Grid.ColumnSpan="3">
                                <ContentPresenter Content="{TemplateBinding Content}" />
                            </Border>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Title}"
                                       Foreground="{StaticResource Label.Normal.Foreground}"
                                       VerticalAlignment="Top"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       Margin="36,10,0,0" />
                            <Image Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(WindowChrome.WindowChrome).ResizeBorderThickness}"
                                   Width="{x:Static SystemParameters.SmallIconWidth}"
                                   WindowChrome.IsHitTestVisibleInChrome="True" />
                            <Grid Grid.Column="2"
                                  FlowDirection="RightToLeft" Margin="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button Name="ExitButton"
                                        Click="ExitButton_Click"
                                        VerticalAlignment="Center"
                                        Margin="4"
                                        Style="{StaticResource HeaderButtonStyle}"
                                        Background="#FFD35454"
                                        WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Path Data="M0,0 L8,8 M0,8 L8,0"
                                          Stroke="White"
                                          StrokeThickness="2"
                                          Stretch="UniformToFill"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round" />
                                </Button>
                                <Button Name="MaximizeButton"
                                        VerticalAlignment="Center"
                                        Margin="4"
                                        Click="MaximizeButton_Click"
                                        Grid.Column="1"
                                        Style="{StaticResource HeaderButtonStyle}"
                                        Background="#FF49C354"
                                        WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Path Data="M 0,0 0,8 8,8 8,0 0,0"
                                          Stroke="Black"
                                          StrokeThickness="2"
                                          Stretch="Uniform"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          StrokeDashCap="Round" />
                                </Button>
                                <Button Name="MinimizeButton"
                                        Margin="4"
                                        Style="{StaticResource HeaderButtonStyle}"
                                        Click="MinimizeButton_Click"
                                        Grid.Column="2"
                                        WindowChrome.IsHitTestVisibleInChrome="True">
                                    <Path Data="M 0,0 8,0"
                                          Stroke="Black"
                                          StrokeThickness="2" />
                                </Button>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <usr:LibraryView Margin="10"
                         Grid.Row="1">
            <usr:LibraryView.Effect>
                <DropShadowEffect />
            </usr:LibraryView.Effect>
        </usr:LibraryView>
        <usr:ShelfView Grid.Column="1"
                       Grid.Row="1"
                       Margin="10">
            <usr:ShelfView.Effect>
                <DropShadowEffect />
            </usr:ShelfView.Effect>
        </usr:ShelfView>
        <usr:BookView Grid.Column="2"
                      Grid.Row="1"
                      Margin="10">
            <usr:BookView.Effect>
                <DropShadowEffect />
            </usr:BookView.Effect>
        </usr:BookView>
    </Grid>
</Window>
